$TTL	604800
{{ reverse_domain }}.  IN	SOA	alensiilivask-2.{{ zone }}. alen.{{ zone }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 	; Negative Cache TTL
);
{% for vm in groups['dns_servers'] %}
{{ reverse_domain }}.	IN	NS	{{ vm }}.{{zone}}.
{% endfor %}

{% for vm in groups['all'] %}
{{ hostvars[vm]['ansible_default_ipv4']['address'].split('.')[3] }} IN PTR {{ vm }}.{{ zone }}.
{% endfor %}
